@model ShopCartViewModel

<div class="container">
    @foreach(var element in Model.shopCart.ListItems)
            {
                <div class="alert alert-warning mt-3">
                    <b>Автомобиль:</b> @element.Car<br />
                    <b>Цена:</b> @element.Price.ToString("c")
                </div>
            }
    <hr />
    <div class="btn btn-danger" asp-controller="Order">Оплатить</div>
</div>